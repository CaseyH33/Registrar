<html>
<head>
    <title>Students</title>
</head>
<body>
    <h1>Students</h1>

    {% if students is not empty %}
        <p>Here are all your students:</p>
        <ul>
            {% for student in students %}
                <li><a href="/students/{{ student.getId }}">{{ student.getName }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action='/students' method='post'>
        <label for='name'>Student name</label>
        <input id='name' name='name' type='text'>

        <label for='enrollment_date'>Enrollment Date</label>
        <input id='enrollment_date' name='enrollment_date' type='date'>

        <button type='submit'>Add category</button>
    </form>
    <form action='/delete_students' method='post'>
        <button type='submit'>Clear</button>
    </form>

    <p><a href='/'>Home</a></p>
</body>
</html>
